<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/_8dp">

    <ImageView
        android:id="@+id/img_recommed_song"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/be_the_one_winwel_remix" />

    <TextView
        android:id="@+id/title_recommend_song"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/song_be_the_one_remix"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/artist_recommend_song"
        app:layout_constraintEnd_toEndOf="@+id/img_recommed_song"
        app:layout_constraintStart_toStartOf="@+id/img_recommed_song"
        app:layout_constraintTop_toBottomOf="@+id/img_recommed_song" />

    <TextView
        android:id="@+id/artist_recommend_song"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/artist_be_the_one_remix"
        android:maxLines="1"
        android:textColor="@color/grey_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/title_recommend_song"
        app:layout_constraintStart_toStartOf="@+id/title_recommend_song" />
</androidx.constraintlayout.widget.ConstraintLayout>